{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "types/*": ["common/types/*"],
      "testing-library/*": ["@local-react-testing-library/*"],
      "common/*": ["common/*"],
      "constants/*": ["constants/*"],
      "helper/*": ["helper/*"],
      "hooks/*": ["hooks/*"],
      "assets/*": ["assets/*"],
      "context/*": ["context/*"],
      "route/*": ["routes/*"]
    }
  },
  "include": ["src"]
}
